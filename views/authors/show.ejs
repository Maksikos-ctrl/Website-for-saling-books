<h2><%= author.name %> </h2>
<a href="/authors/<%= author.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', { url: `/authors/${author.id}` })  %> 

<% if (booksByAuthor.length > 0) {%>
    <h2>Books by this Author</h2>
    <% booksByAuthor.forEach(b => { %>
        <img height="150" width="100" src="<%= b.coverImagePath %> "
    <% }) %>  
<% } %>
